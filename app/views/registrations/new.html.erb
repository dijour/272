<div class="row">
  <div class="col s8">
    <h4>New Student for <%= @camp.name %>:</h4>
    <%= simple_form_for(@registration) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :student_id, collection: Student.active.alphabetical.below_rating(@camp.curriculum.max_rating).at_or_above_rating(@camp.curriculum.min_rating).to_a, include_blank: true %>
          <%= f.input :camp_id, as: :hidden, input_html: { value: @camp.id } %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s4">
    <%= render :partial => "other_students" %>
  </div>
</div>