<div class="card">
  <div class="card-content">
    <span class="card-title">Other Students</span>
    <% if @other_students.empty? %>
      <p>No other instructors assigned at this time</p>
    <% else %>
      <ul>
        <% if can? :update, Student %>
          <td><%= link_to 'Edit', edit_curriculum_path(curriculum), :class=>"btn waves-effect waves-light blue" %></td>
        <% end %>
        <% for student in @other_students %>
          <li><%= link_to student.proper_name, student_path(student) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>