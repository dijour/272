    <div class="row">
      <div class="col s12">
        <div class="card" style="background-color:#e1484f">
          <div class="card-content white-text">
            <span class="card-title center">Thank you for your purchase!</span>
            <table>
              <thead>
                <tr>
                  <th>Camp</th>
                  <th>Student</th>
                  <th>Amount Paid</th>
                  <th>Card</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @payment.split("/").each do |p| %>
                <tr>
                <%  a = p.split(" ") %>
                      <td><%= Camp.find_by_id(a[1].to_i).curriculum.name %></td>
                      <td><%= Student.find_by_id(a[3].to_i).proper_name %></td>
                      <td><%= number_to_currency(a[5][0..-2].to_i) %></td>
                      <td><%= a[8] %></td>
                
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>