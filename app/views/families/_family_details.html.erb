<h3><%= @family.family_name %></h3>
<h5>Basic Information</h5>
<p><strong>Parent First Name: </strong><%= @family.parent_first_name %></p>
<p>
  <strong>Parent Phone:</strong>
  <% if ! current_user.nil? and (current_user.role == "admin" || current_user.role == "parent") %>
    <%= best_in_place @family, :phone, as: :input %>
  <% else %>
    <%= @family.phone %>
  <% end %>
</p>
<p>
  <strong>Parent Email:</strong>
  <% if ! current_user.nil? and (current_user.role == "admin" || current_user.role == "parent") %>
    <%= best_in_place @family, :email, as: :input %>
  <% else %>
    <%= @family.email %>
  <% end %>
</p>
<p><strong>Active:</strong>
  <%= @family.active ? "Yes" : "No" %>
</p>