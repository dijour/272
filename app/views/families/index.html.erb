<p id="notice"><%= notice %></p>

<% if @families.empty? %>
  <h3>There are no families in the system at this time</h3>
<% else %>
  <h3>Families</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= link_to family.family_name, family %></td>
        <td><%= number_to_phone family.phone %></td>
        <td><%= family.students.size %></td>
        <% if can? :update, Family %>
          <td><%= link_to 'Edit', edit_family_path(family), :class=>"btn waves-effect waves-light gradient-45deg-red-pink mt-2 btn-small z-depth-5" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'families' %>
</span>

    <% end %>

<% if can? :create, Family %>
  <td><%= link_to 'New family', new_family_path, :class=>"btn waves-effect waves-light blue" %></td>
<% end %>