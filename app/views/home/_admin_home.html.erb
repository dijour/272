<div class="row">
    <div class="col">  
        <h2 class="center">A brief history of CASHMONEYPROFIT</h2>
        <% data = [] %>
        <% for camp in Camp.all do %>
        <% data << [camp.curriculum, camp.cost] %>
        <% end %>
        <%= pie_chart data %>
    </div>
</div>

<div class="col s12 m7">
<h2 class="header">Horizontal Card</h2>
<div class="card horizontal">
  <div class="card-stacked">
    <div class="card-content">
      <h2 class="center">A pie chart</h2>
      <%= pie_chart Curriculum.group(:camp).count %>
    </div>
    <div class="card-action">
      <%= link_to 'Manage Camps', camps_path, :class=>"btn waves-effect waves-light blue" %>
    </div>
  </div>
</div>
</div>
        
        
<div class="col s12 m7">
<h2 class="header">This week</h2>
<div class="card horizontal">
  <div class="card-stacked">
    <div class="card-content">
      <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Max Capacity</th>
          <th>Enrolled Students</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% for camp in Camp.all do %>
            <% if camp.start_date <= Date.today && camp.end_date >= Date.today %>
              <tr>
                <td color="Black"><%= link_to camp.name, camp %></td>
                <td><%= camp.max_students %></td>
                <td><%= camp.registrations.size %></td>
              </tr>
            <% end %>  
        <% end %>
      </tbody>
    </table>

  </div>
</div>
</div>
        