<section class="hero is-info welcome is-small" style="background:#f48fb1">
    <div class="container-large">
      <h1 class="title center">
        <%= "Hello, #{current_user.username}" %>
      </h1>
    </div>
</section>

  <div class="col s12">  
      <h2 class="center">Camps per Week</h2>
    <%= line_chart Camp.group("date(camps.start_date)").count %>
  </div>
    



<h2 class="header center">The Week Ahead</h2>
<div class="row">
  
  
  
  <div class="col s6">
    <div class="card blue darken-1">
      <div class="card-content white-text">
        <span class="card-title">Active Camps this Week</span>
          <%= pie_chart Curriculum.current.group(:name).count, donut: true, messages: {empty: "No data"} %>
      </div>
      <div class="card-action">
        <%= link_to 'Manage Camps', camps_path, :class=>"btn waves-effect waves-light gradient-45deg-red-pink mt-2 btn-small z-depth-5" %>
      </div>
    </div>
  </div>
  <div class="col s6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Camps per Instructor</span>
        <%= column_chart Instructor.current.group(:first_name, :last_name).count, donut: true, messages: {empty: "No data"} %>
      </div>
      <div class="card-action">
        <%= link_to 'Manage Instructors', instructors_path, :class=>"btn waves-effect waves-light gradient-45deg-red-pink mt-2 btn-small z-depth-5" %>
      </div>
    </div>
  </div>
</div>




<div class="row">
    
  <div class="col s12">
  <div class="card horizontal">
    <div class="card-stacked">
      <div class="card-content">
        <h4 class="center"><%= "Weekly Profit: #{weekly_profit}" %></h4>
      </div>
      <div class="card-action">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Cost</th>
            <th>Max Capacity</th>
            <th>Enrolled Students</th>
            <th>Instructors</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% for camp in Camp.all do %>
              <% if camp.start_date <= Date.today && camp.end_date >= Date.today %>
                <tr>
                  <td><%= link_to camp.name, camp, {:style=>'color:blue;'}%></td>
                  <td><%= number_to_currency(camp.cost) %></td>
                  <td><%= camp.max_students %></td>
                  <td><%= camp.registrations.size %></td>
                  <td><%= camp.instructors.size %></td>
                </tr>
              <% end %>  
          <% end %>
        </tbody>
      </table>


      </div>
    </div>
  </div>
  </div>
    

</div>
