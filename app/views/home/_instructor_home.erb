<section class="hero is-info welcome is-small" style="background:#f71d65">
    <div class="container-wide">
      <h1 class="title center">
        <%= "Hello, #{current_user.instructor.proper_name}" %>
      </h1>
    </div>
</section>

</br>

<div class="row">
  <div class="col s12">
  <div class="card horizontal">
    <div class="card-stacked">
      <div class="card-content">
          <h2 class="header" align="center">Camps to teach this Week</h2>
        <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Max Capacity</th>
            <th>Enrolled Students</th>
            <th>Instructors</th>
            <th>Location</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% for camp in current_user.instructor.camps.current.alphabetical do %>
              <% if camp.start_date <= Date.today && camp.end_date >= Date.today %>
                <tr>
                  <td ><%= link_to camp.name, camp, {:style=>'color:blue;'}%></td>
                  <td><%= camp.max_students %></td>
                  <td><%= camp.registrations.size %></td>
                  <td><%= camp.instructors.size %></td>
                  <td><%= link_to camp.location.name, location_url(camp.location), {:style=>'color:blue;'} %></td>
                </tr>
              <% end %>  
          <% end %>
        </tbody>
      </table>
  
    </div>
  </div>
  </div>
  </div>
</div>